<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 id="modal-title" class="modal-title">Channel selection</h4>
</div>
<div id="modal-body" class="modal-body">
    <div id="modal-error" class="alert alert-danger hide"></div>
    <div class="form-horizontal">
        <label for="channel-select">Select a channel to create the binding:</label>
        <select id="channel-select" class="form-control">
            {{#channels}}
            <option value="{{optVal}}">{{optTxt}}</option>
            {{/channels}}
        </select>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button id="modal-save" type="button" class="btn btn-primary" data-dismiss="modal">Save changes</button>
</div>