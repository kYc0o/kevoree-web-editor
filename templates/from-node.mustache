<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 id="modal-title" class="modal-title">{{action}} from node</h4>
</div>
<div id="modal-body" class="modal-body">
    <div id="modal-error" class="alert alert-danger hide"></div>
    <div class="form-horizontal">
        <div class="form-group">
            <label for="node-host" class="col-sm-2 control-label">Host</label>
            <div class="col-sm-10">
                <input type="text" class="form-control mousetrap input-sm" id="node-host" placeholder="127.0.0.1" value="{{host}}">
            </div>
        </div>
        <div class="form-group">
            <label for="node-port" class="col-sm-2 control-label">Port</label>
            <div class="col-sm-10">
                <input type="number" class="form-control mousetrap input-sm" id="node-port" placeholder="9000" value="{{port}}">
            </div>
        </div>
        <div class="form-group">
            <label for="node-path" class="col-sm-2 control-label">Path</label>
            <div class="col-sm-10">
                <input type="text" class="form-control mousetrap input-sm" id="node-path" placeholder="/some/path (optional)" value="{{path}}">
            </div>
        </div>
    </div>
    <div class="col-sm-offset-9">
        <button type="button" class="btn btn-info btn-xs" id="runjs-shared-group">RunJS Shared Group</button>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button id="modal-save" type="button" class="btn btn-primary">Pull model</button>
</div>